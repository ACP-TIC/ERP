<UserControl x:Class="cntrl.ReportPanel" x:Name="this"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:Controls="clr-namespace:cntrl.Controls"
    
             xmlns:local="clr-namespace:cntrl"
             xmlns:reporting="clr-namespace:cntrl.Class"
             xmlns:lex="http://wpflocalizeextension.codeplex.com" 
             lex:ResxLocalizationProvider.DefaultAssembly="Cognitivo" 
             lex:ResxLocalizationProvider.DefaultDictionary="local"
             lex:LocalizeDictionary.DesignCulture="en-US"
             mc:Ignorable="d" Foreground="White"
    	     xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
             d:DesignHeight="600" d:DesignWidth="800" Loaded="this_Loaded">
    <UserControl.Resources>
        <CollectionViewSource x:Key="ReportViewSource" d:DesignSource="{d:DesignInstance {x:Type reporting:Report}, CreateList=True}"/>
        
        <CollectionViewSource x:Key="ReportReport_paremeterViewSource" Source="{Binding Report_Parameter, Source={StaticResource ReportViewSource}}"/>

    </UserControl.Resources>
    <Grid Background="{StaticResource AccentColor_Brush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1">
            <rv:ReportViewer x:Name="reportViewer" />
        </WindowsFormsHost>
        <StackPanel>
            <TextBlock Style="{StaticResource TextAreaH2}" TextWrapping="Wrap" HorizontalAlignment="Stretch" Margin="5"
                       Text="{Binding ReportTitle, ElementName=this, Mode=OneWay}"/>
            <TextBlock Style="{StaticResource text_Label}" HorizontalAlignment="Stretch" TextWrapping="Wrap" Foreground="Gray"
                           Text="{Binding ReportDescription, ElementName=this, Mode=OneWay}"/>

            <Grid>
                <Label Content="{lex:Loc Reports}" FontWeight="Light" Foreground="White" HorizontalAlignment="Center" Style="{StaticResource H3}"/>
                <Button Content="" Width="24.5" Height="24.5" Background="RoyalBlue" BorderBrush="White" HorizontalAlignment="Right"
                        FontFamily="/cntrl;component/Resources/#cognitivo" Foreground="White" FontSize="10"
                        Style="{DynamicResource MetroCircleButtonStyle}" ToolTip="{lex:Loc Refresh}"/>
            </Grid>
            <ListBox ItemsSource="{Binding Source={StaticResource ReportViewSource}}" Margin="4"
                         DisplayMemberPath="Name" SelectionChanged="ListBox_SelectionChanged" Foreground="White">
                <ListBox.Background>
                    <SolidColorBrush Color="White" Opacity="0.64"/>
                </ListBox.Background>
            </ListBox>

            <Label Content="{lex:Loc Parameters}" FontWeight="Light" Foreground="White" HorizontalAlignment="Center" Style="{StaticResource H3}"/>
            <local:DateRange x:Name="DateRange" StartDate="{Binding ElementName=this, Path=StartDate, Mode=TwoWay}" Margin="4"
                                 EndDate="{Binding ElementName=this, Path=EndDate, Mode=TwoWay}" Visibility="Collapsed"
                             />
            <ComboBox SelectedValuePath="id_project" DisplayMemberPath="name" SelectedValue="{Binding ProjectID,ElementName=this,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                     Visibility="Collapsed" x:Name="ComboProject" />
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="stpFilter"/>
            </ScrollViewer>
            <Grid>
                <Label Content="{lex:Loc Filter}" FontWeight="Light" Foreground="White" HorizontalAlignment="Center" Style="{StaticResource H3}"/>
                <Button Content="c" Width="24.5" Height="24.5" Background="White" BorderBrush="White" HorizontalAlignment="Right"
                        FontFamily="/cntrl;component/Resources/#cognitivo" Foreground="DimGray" FontSize="16"
                        Style="{DynamicResource MetroCircleButtonStyle}" />
            </Grid>
            <Popup x:Name="popFilter">
                <StackPanel x:Name="stpColumn">
                    <StackPanel.Background>
                        <SolidColorBrush Color="White" Opacity="0.64"/>
                    </StackPanel.Background>
                </StackPanel>
            </Popup>
        </StackPanel>
    </Grid>
</UserControl>
