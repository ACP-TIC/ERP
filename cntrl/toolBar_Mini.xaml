<UserControl x:Class="cntrl.toolBar_Mini"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:lex="http://wpflocalizeextension.codeplex.com"
                lex:LocalizeDictionary.DesignCulture="en-US"
                lex:ResxLocalizationProvider.DefaultAssembly="Cognitivo"
                lex:ResxLocalizationProvider.DefaultDictionary="strings"
             Height="32" MinWidth="100" Loaded="UserControl_Loaded">
    <Grid>
        <Border CornerRadius="8" HorizontalAlignment="Center" BorderBrush="DimGray" BorderThickness="0,1.5,0,0">
            <StackPanel Orientation="Horizontal">
                <StackPanel Name="stackMain" Orientation="Horizontal" Margin="4,0" />
                <StackPanel Name="stackSide" Orientation="Horizontal" Margin="4,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>