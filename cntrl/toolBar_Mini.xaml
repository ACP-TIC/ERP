<UserControl x:Class="cntrl.toolBar_Mini"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                xmlns:lex="http://wpflocalizeextension.codeplex.com" 
                lex:LocalizeDictionary.DesignCulture="en-US" 
                lex:ResxLocalizationProvider.DefaultAssembly="Cognitivo"
                lex:ResxLocalizationProvider.DefaultDictionary="strings"
             Height="32" MinWidth="100" Loaded="UserControl_Loaded">
    <Grid>     
        <Rectangle Style="{StaticResource line_Bar}"/>

        <Border CornerRadius="10" Background="White" MinWidth="32" Margin="16,1" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"/>
            </Border.Effect>
            
            <StackPanel Orientation="Horizontal">
                <StackPanel.Effect>
                    <DropShadowEffect ShadowDepth="3" Direction="270" Opacity="0.32" />
                </StackPanel.Effect>
                <StackPanel Name="stackMain" Orientation="Horizontal"/>
                <StackPanel Name="stackSide" Orientation="Horizontal"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>