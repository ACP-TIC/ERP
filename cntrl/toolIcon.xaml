<UserControl x:Class="cntrl.toolIcon" x:Name="_toolIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Button FontWeight="Medium" FocusVisualStyle="{x:Null}" Focusable="False"
            Margin="4,0" Height="32" Padding="0" BorderThickness="0"
            Click="toolIcon_Click" Background="White">
        <StackPanel Orientation="Horizontal" Margin="4,0">
            <Label Content="{Binding imgSource, ElementName=_toolIcon}" FontFamily="/cntrl;component/Resources/#cognitivo"
                   Foreground="Black" FontSize="18" />
            <Label Content="{Binding icoName, ElementName=_toolIcon}" VerticalAlignment="Center"
                   Foreground="Black" />
        </StackPanel>
    </Button>
</UserControl>