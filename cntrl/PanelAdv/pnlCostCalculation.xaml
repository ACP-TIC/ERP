<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cntrl.PanelAdv"
              xmlns:cntrl="clr-namespace:cntrl.Controls"
           
         xmlns:lex="http://wpflocalizeextension.codeplex.com" 
          lex:ResxLocalizationProvider.DefaultAssembly="Cognitivo" 
          lex:ResxLocalizationProvider.DefaultDictionary="local"
          lex:LocalizeDictionary.DesignCulture="en-US"
             xmlns:entity="clr-namespace:entity;assembly=entity" x:Class="cntrl.PanelAdv.pnlCostCalculation"
             mc:Ignorable="d" Background="White"
             Height="256" Width="512" Loaded="UserControl_Loaded">
    <UserControl.Resources>
      
    </UserControl.Resources>
    <UserControl.Effect>
        <DropShadowEffect ShadowDepth="0" BlurRadius="16"/>
    </UserControl.Effect>
    <StackPanel >
        <Grid Background="{StaticResource appConfig}">
         
              
            <Label Content="c" FontSize="18" VerticalAlignment="Center" Margin="5"
				HorizontalAlignment="Right" MouseUp="btnCancel_Click" 
				FontFamily="/cntrl;component/Resources/#cognitivo" Cursor="Hand"/>
        </Grid>
        <StackPanel Orientation="Horizontal">
            <DataGrid x:Name="OutPutDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1"
								EnableRowVirtualization="True" Height="Auto" Margin="0,4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible"
								RowDetailsVisibilityMode="VisibleWhenSelected" Width="Auto" SelectionChanged="OutPutDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Code}" MinWidth="64" MaxWidth="256" Binding="{Binding Code}"/>
                    <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Name}" MinWidth="64" MaxWidth="256" Binding="{Binding Name}"/>


                </DataGrid.Columns>
            </DataGrid>
            <StackPanel>
                <Label></Label>
                <DataGrid x:Name="InputDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1"
								EnableRowVirtualization="True" Height="Auto"  HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Visible"
								RowDetailsVisibilityMode="VisibleWhenSelected" Width="366">
                    <DataGrid.Columns>

                        <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Name}" MinWidth="64" MaxWidth="256" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Quantity}" MinWidth="64" MaxWidth="256" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Binding="{Binding Cost, StringFormat={}{0:N2}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
												Header="{lex:Loc Cognitivo:local:Cost}" Width="128"
												ElementStyle="{StaticResource RightAlignStyle}"/>
                        <DataGridTextColumn Binding="{Binding SubTotal, StringFormat={}{0:N2}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
												Header="{lex:Loc Cognitivo:local:ProductionCost}" Width="128"
												ElementStyle="{StaticResource RightAlignStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>