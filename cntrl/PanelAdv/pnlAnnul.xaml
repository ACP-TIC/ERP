<UserControl x:Class="cntrl.PanelAdv.pnlAnnul"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cntrl.PanelAdv"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="256" d:DesignWidth="512">
    <UserControl.Effect>
        <DropShadowEffect ShadowDepth="0" BlurRadius="16"/>
    </UserControl.Effect>
    <StackPanel>
        <Grid Background="{StaticResource appConfig}">
            <StackPanel Orientation="Horizontal">
                <Label Content="L" FontFamily="/cntrl;component/Resources/#cognitivo" Foreground="Silver" FontSize="22"/>
                <TextBox Text="Search" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,4" Width="256">
                    <TextBox.Background>
                        <SolidColorBrush Color="White" Opacity="0.75"/>
                    </TextBox.Background>
                </TextBox>
            </StackPanel>

            <Button Content="Start" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="4"/>
        </Grid>

        <DataGrid Margin="8"/>
    </StackPanel>
</UserControl>
