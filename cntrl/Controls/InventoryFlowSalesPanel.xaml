<UserControl x:Class="cntrl.Controls.InventoryFlowSalesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:cntrl.Controls"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
		        lex:ResxLocalizationProvider.DefaultAssembly="Cognitivo"
		        lex:ResxLocalizationProvider.DefaultDictionary="local"
		        lex:LocalizeDictionary.DesignCulture="en-US"
             mc:Ignorable="d" Loaded="UserControl_Loaded" Width="256" Background="Gainsboro">
    <UserControl.Resources>
        <CollectionViewSource x:Key="item_movementViewSource" d:DesignSource="{d:DesignInstance {x:Type local:ItemMovement}, CreateList=True}" />
    </UserControl.Resources>
    <StackPanel>
        <Image Source="/cntrl;component/Images/Outline_White/SalesOrder.png" Margin="8" Width="64" Height="64" />
        <Label Content="Sales Invoice" Style="{StaticResource H3}" HorizontalAlignment="Center" />
        <Label Content="Comments" Style="{StaticResource input_label}" HorizontalAlignment="Center" />
        <Label Content="11/11/2017" Style="{StaticResource generic_Label}" HorizontalAlignment="Center" />
    </StackPanel>
</UserControl>