<UserControl x:Class="cntrl.Controls.CustomField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cntrl.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding ElementName=this,Path=FieldName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextToLabelStyle}"/>
            <TextBox Text="{Binding ElementName=this,Path=FieldValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>    
    </Grid>
</UserControl>
