<UserControl x:Class="cntrl.Controls.SmartBox_Contact" x:Name="_SmartBox_Contact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:crud="clr-namespace:cntrl.Curd"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                xmlns:entity="clr-namespace:entity;assembly=entity"
                xmlns:lex="http://wpflocalizeextension.codeplex.com" 
                lex:ResxLocalizationProvider.DefaultAssembly="Cognitivo" 
                lex:ResxLocalizationProvider.DefaultDictionary="local"
                lex:LocalizeDictionary.DesignCulture="en-US" 
             mc:Ignorable="d" d:DesignHeight="26" d:DesignWidth="256" Margin="4,0,4,4" GotFocus="_SmartBox_Contact_GotFocus" LostFocus="_SmartBox_Contact_LostFocus">
    <UserControl.Resources>
        <CollectionViewSource x:Key="contactViewSource" d:DesignSource="{d:DesignInstance {x:Type entity:contact}, CreateList=True}"/>
    </UserControl.Resources>
    <Grid>
        <Popup x:Name="popCrud" PopupAnimation="Slide" Placement="Relative" Visibility="Visible" 
               AllowsTransparency="True">
            <crud:contact x:Name="crudContact" btnSave_Click="crudContact_btnSave_Click" BorderBrush="Black" BorderThickness="1"/>
        </Popup>
        <!-- TextBox for Searching -->
        <TextBox x:Name="tbxSearch" Padding="12,0,0,0"
                 Text="{Binding Path=Text, ElementName=_SmartBox_Contact, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 metro:ControlsHelper.FocusBorderBrush="RoyalBlue"
                 metro:ControlsHelper.MouseOverBorderBrush="Silver"
                 metro:TextBoxHelper.SelectAllOnFocus="True"
                 metro:TextBoxHelper.Watermark="{lex:Loc Search}" 
                 KeyUp="StartSearch" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="4,0" Visibility="{Binding}">
            <Label FontFamily="/cntrl;component/Resources/#cognitivo" Content="+" FontSize="9" VerticalAlignment="Center" Margin="0" 
                   HorizontalAlignment="Left" Foreground="{StaticResource Label_ImportantColor}" Cursor="Hand"
                   PreviewMouseUp="Add_PreviewMouseUp" Padding="4" FontWeight="Bold"/>

            <Label Content="|" Foreground="Silver" VerticalAlignment="Center" Margin="0" FontSize="9"/>

            <Label FontFamily="/cntrl;component/Resources/#cognitivo" Content="e" FontSize="9" VerticalAlignment="Center" Margin="0" 
                                       HorizontalAlignment="Left" Foreground="{StaticResource Label_ImportantColor}" Cursor="Hand"
                                       PreviewMouseUp="Edit_PreviewMouseUp_1" Padding="4" FontWeight="Bold"/>
        </StackPanel>

        <!-- Progress Ring -->
        <!--<ProgressBar x:Name="progBar" IsIndeterminate="True" Background="White" Opacity="0.16" Height="26"/>-->

        <!-- Search Icon -->
        <Label FontFamily="/cntrl;component/Resources/#cognitivo" Content="L" VerticalAlignment="Center"
               HorizontalAlignment="Left" Foreground="{StaticResource Modal_BackgroundColor}"/>

        <Popup x:Name="popContact" IsOpen="False">
            <Popup.Effect>
                <DropShadowEffect ShadowDepth="0"/>
            </Popup.Effect>
            <Border Background="{StaticResource AccentColor_Brush}">
                <DataGrid MaxWidth="512" AutoGenerateColumns="False" HeadersVisibility="None" ItemsSource="{Binding Source={StaticResource contactViewSource}}" 
                      IsReadOnly="True" MouseDoubleClick="ContactGrid_MouseDoubleClick" Margin="4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Code}" Binding="{Binding code}" Width="auto"/>
                        <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Name}" Binding="{Binding name}" FontWeight="Bold" Width="auto"/>
                        <DataGridTextColumn Header="{lex:Loc Cognitivo:local:GovId}" Binding="{Binding gov_code}" Width="auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
