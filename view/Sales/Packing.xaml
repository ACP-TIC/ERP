<Page x:Class="Cognitivo.Sales.Packing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cntrl="clr-namespace:cntrl;assembly=cntrl"
       xmlns:entity="clr-namespace:entity;assembly=entity"
      xmlns:local="clr-namespace:Cognitivo.Sales"
        xmlns:my="clr-namespace:entity.Properties;assembly=entity"
      mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="800"
      Title="Packing" Loaded="Page_Loaded">
    <Page.Resources>
        <CollectionViewSource x:Key="payment_schedualViewSource" d:DesignSource="{d:DesignInstance {x:Type entity:payment_schedual}, CreateList=True}" />
    </Page.Resources>
   
    <Grid Background="{StaticResource AccentColor_Brush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <cntrl:toolIcon icoName="New" imgSource="+"/>
            <cntrl:toolIcon icoName="Cancel" imgSource="c"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Label Style="{StaticResource input_label}" Content="Branch" FontSize="12"/>
            <Label Content="{Binding Source={x:Static my:Settings.Default}, Path=branch_Name}"  Style="{StaticResource generic_Label}"/>
            <Label Content="|"/>
            <Label Style="{StaticResource input_label}" Content="Terminal" FontSize="12"/>
            <Label  Content="{Binding Source={x:Static my:Settings.Default}, Path=terminal_Name}" Style="{StaticResource generic_Label}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <Label Content="Search" Style="{StaticResource input_label}"/>
            <cntrl:SearchableTextbox x:Name="InvocieComboBox"  KeyDown="set_InvoicePrefKeyStroke" MouseDoubleClick="set_InvoicePref"
                                                 CollectionViewSource="{StaticResource payment_schedualViewSource}"
                                                 IsDisplayed="True" KeyUp="InvocieComboBox_KeyUp"
                                                 Data="{Binding sales_invocie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <cntrl:SearchableTextbox.Columns>
                    <cntrl:SmartBoxColumn Header="Number" ForProperty="sales_invoice.number" Binding="{Binding sales_invoice.number, Mode=Default}" EnableSearch="True"/>
                    <cntrl:SmartBoxColumn Header="Name" ForProperty="sales_invoice.contact.name" Binding="{Binding sales_invoice.contact.name, Mode=Default}" EnableSearch="True"/>
               </cntrl:SearchableTextbox.Columns>
            </cntrl:SearchableTextbox>
            <Label Content="Comment" Style="{StaticResource input_label}"/>
            <TextBox Style="{StaticResource input_textbox}" TextWrapping="Wrap" Height="64"/>
        </StackPanel>
        <DataGrid x:Name="dgvItem" Grid.Row="2" Margin="32,8" AutoGenerateColumns="False" LoadingRowDetails="dgvItem_LoadingRowDetails">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item" Binding="{Binding item.name, Mode=Default}" />
                <DataGridTextColumn Header="quantity" Binding="{Binding quantity, Mode=Default}" />
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DataGrid x:Name="item_movementDataGrid" 
                  VerticalScrollBarVisibility="Auto"
                  AutoGenerateColumns="False" Grid.Column="1"
                  EnableRowVirtualization="True"  Grid.Row="1" 
                  IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding LocationName}" Header="BranchName" Width="auto" />
                            <DataGridTextColumn Binding="{Binding quntitiy}" Header="Quantity" Width="auto" />
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="+" Click="Button_Click" Tag="{Binding LocationName}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <Button Style="{StaticResource btn_green}" Margin="4" Grid.Row="3" Content="Save" Click="btnSave_Click"/>
    </Grid>
</Page>
