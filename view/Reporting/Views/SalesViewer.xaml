<Page x:Class="Cognitivo.Reporting.Views.SalesViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
	  Title="Sales ReportViewer">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <ListView Grid.Column="0" VerticalAlignment="Top" FontSize="16" FontWeight="Medium">
                <ListBoxItem>
                    <StackPanel Height="64">
                        
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>Sales Invoice Summary</ListBoxItem>
                <ListBoxItem>Sales Invoice Summary</ListBoxItem>
                <ListBoxItem>Sales Invoice Summary</ListBoxItem>
            </ListView>
        </StackPanel>
        <WindowsFormsHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1">
            <rv:ReportViewer x:Name="reportViewer"/>
        </WindowsFormsHost>
    </Grid>
</Page>
