    <Grid>
        <TabControl>
            <TabItem Header="{lex:Loc SalesInvoice}">
                <Grid Background="White" DataContext="{StaticResource salesViewSource}">
                    <CheckBox Style="{StaticResource input_checkbox}" Content="Select All"/>
                    <Button VerticalAlignment="Top" HorizontalAlignment="Right" Content="Syncronize"
                            Style="{StaticResource btn_green}" Margin="4"/>
                    <DataGrid Margin="0,32,0,0">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn />
