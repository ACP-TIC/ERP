                            <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Contact}"/>
                            <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Number}"/>
                            <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Total}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="{lex:Loc SalesReturn}">
