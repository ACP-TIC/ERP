                            <DataGridTextColumn Header="{lex:Loc Cognitivo:local:Total}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="{lex:Loc PurchaseInvoice}">
