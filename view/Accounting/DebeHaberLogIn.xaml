<Page x:Class="Cognitivo.Accounting.DebeHaberLogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800" Background="{StaticResource AccentColor_Introvert}"
	  Title="DebeHaberLogIn">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Usuario" Style="{StaticResource input_label}"/>
            <TextBox Style="{StaticResource input_textbox}"/>
            <Label Content="Contrasena" Style="{StaticResource input_label}"/>
            <PasswordBox Style="{StaticResource input_password}"/>
            <Button Click="btnLogin_Click" Content="LogIn" Style="{StaticResource btn_green}" Margin="16,8"/>
        </StackPanel>
        <TextBox x:Name="tbxServer" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="16" Style="{StaticResource input_textbox}"/>
    </Grid>
</Page>
