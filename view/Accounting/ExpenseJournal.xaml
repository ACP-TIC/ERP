<Page x:Class="Cognitivo.Accounting.ExpenseJournal" Title="{lex:Loc BookofExpenses}" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cntrl="clr-namespace:cntrl;assembly=cntrl"
         xmlns:Controls="clr-namespace:cntrl.Controls;assembly=cntrl"  
      xmlns:entity="clr-namespace:entity;assembly=entity"
      Background="White"
          xmlns:lex="http://wpflocalizeextension.codeplex.com" 
        lex:ResxLocalizationProvider.DefaultAssembly="Cognitivo" 
        lex:ResxLocalizationProvider.DefaultDictionary="local"
        lex:LocalizeDictionary.DesignCulture="en-US"       
      Loaded="Page_Loaded"
      mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">
    <Page.Resources>
        <CollectionViewSource x:Key="accounting_journalViewSource" d:DesignSource="{d:DesignInstance {x:Type entity:accounting_journal}, CreateList=True}"/>
        <!--<CollectionViewSource x:Key="accounting_cycleViewSource" d:DesignSource="{d:DesignInstance {x:Type entity:accounting_cycle}, CreateList=True}"/>-->
        <CollectionViewSource x:Key="accounting_journalaccounting_journal_detailViewSource" Source="{Binding accounting_journal_detail, Source={StaticResource accounting_journalViewSource}}"/>
    </Page.Resources>
    <Grid DataContext="{StaticResource accounting_journalViewSource}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--<Grid Grid.Row="1" Grid.RowSpan="2" Background="{StaticResource AccentColor_Brush}">
            <ComboBox x:Name="cmbcycle" DisplayMemberPath="name" SelectedValuePath="id_accounting_cycle" Margin="4"
                      ItemsSource="{Binding Source={StaticResource accounting_cycleViewSource}}" VerticalAlignment="Top"
                      SelectionChanged="ComboBox_SelectionChanged"/>
        </Grid>-->
        <ListBox Background="{StaticResource AccentColor_Brush}" x:Name="accounting_journalDataGrid"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.RowSpan="2" BorderBrush="{StaticResource AccentColor_Brush}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ItemContainerStyle="{StaticResource nav_ListSelection}" Style="{StaticResource nav_List}"
                 ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <cntrl:navList recordCode="{Binding code}" 
                                   recordSecondaryName="{Binding comment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                   recordName="{Binding trans_date, StringFormat={}{0:d}}"
                                       IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                   State="{Binding State, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                   Status="{Binding status,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TabControl Grid.Row="1" Grid.Column="1" Background="White">
            <TabItem Header="Automatic">
                <ScrollViewer>
                    <Grid>
                        <StackPanel Margin="30,0,0,0" IsEnabled="{Binding ElementName=toolbar,Path=IsEditable}">
                            <TextBlock Text=" Automatic Transactions generated by the system. You will be able to update only the transactional values." Style="{StaticResource text_Instructions}"/>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{lex:Loc TransactionNumber}" Style="{StaticResource input_label}"/>
                                <Label Content="{Binding code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{lex:Loc FiscalPeriod}" Style="{StaticResource input_label}"/>
                                <Label Content="{Binding accountig_cycle.name}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{lex:Loc TransactionDate}" Style="{StaticResource input_label}"/>
                                <Label Content="{Binding trans_date}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{lex:Loc Origin}" Style="{StaticResource input_label}"/>
                                <Rectangle Width="1" Margin="0,4" Fill="Silver"/>
                                <Label Content="{lex:Loc Purchase}"/>
                            </StackPanel>
                            <Label Content="{lex:Loc Comment}" Style="{StaticResource input_label}"/>
                            <TextBlock Text="{Binding comment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <Label Content="{lex:Loc Currency}" Style="{StaticResource input_label}"/>
                            <Controls:AccountingCurrencyBox x:Name="cbxCurrency" appName="SalesInvoice" Width="256" HorizontalAlignment="Left"
                                                    TransDate="{Binding trans_date,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="2" Grid.Column="1" IsEnabled="{Binding ElementName=toolbar,Path=IsEditable}">
            <Label Style="{StaticResource H2}"  Content="{lex:Loc AccountingJournal}" Height="45"/>
            <DataGrid ItemsSource="{Binding Source={StaticResource accounting_journalaccounting_journal_detailViewSource}}" 
                      AutoGenerateColumns="False" Margin="8,0" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding accounting_chart.code}" Header="{lex:Loc Cognitivo:local:Code}" Width="128" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding accounting_chart.name}" Header="{lex:Loc Cognitivo:local:Name}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding debit, StringFormat={}{0:N2}}" Header="{lex:Loc Cognitivo:local:Debit}" Width="128" ElementStyle="{StaticResource RightAlignStyle}"/>
                    <DataGridTextColumn Binding="{Binding credit, StringFormat={}{0:N2}}" Header="{lex:Loc Cognitivo:local:Credit}" Width="128" ElementStyle="{StaticResource RightAlignStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8,0">
                <Label Content="{lex:Loc Total}" HorizontalContentAlignment="Right" Background="WhiteSmoke" Width="128" Style="{StaticResource input_label}"/>
                <Label Content="{Binding TotalDebit, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" ContentStringFormat="N2" Background="WhiteSmoke" HorizontalContentAlignment="Right" Width="128" Style="{StaticResource input_label}"/>
                <Label Content="{Binding TotalCredit, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" ContentStringFormat="N2" Background="WhiteSmoke" HorizontalContentAlignment="Right" Width="128" Style="{StaticResource input_label}"/>
            </StackPanel>
        </StackPanel>

        <cntrl:toolBar x:Name="toolbar" Grid.ColumnSpan="2" VerticalAlignment="Top" 
                      appName="BookofExpenses"
                       btnApprove_Click="toolBar_btnSave_Click"
                       
                       State="{Binding State, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                       Status="{Binding status, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
    </Grid>
</Page>
