<Window x:Class="Cognitivo.Report.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:cntrl.Controls;assembly=cntrl"
          xmlns:lex="http://wpflocalizeextension.codeplex.com"        
          lex:LocalizeDictionary.DesignCulture="en-US"
          lex:ResxLocalizationProvider.DefaultAssembly="Cognitivo" 
          lex:ResxLocalizationProvider.DefaultDictionary="local"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
	Title="ReportPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0">
            <ListBoxItem IsSelected="False">
                <StackPanel Orientation="Horizontal">
                    <Image Height="24" Source="/Cognitivo;component/Images/Menu/modSales.png" />
                    <Label Style="{StaticResource H3}" Content="{lex:Loc Sales}"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content="S"/>
                    <Label Style="{StaticResource generic_Label}" Content="{lex:Loc Sales}"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content="C"/>
                    <Label Style="{StaticResource generic_Label}" Content="{lex:Loc SalesDetail}"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content="S"/>
                    <Label Style="{StaticResource generic_Label}" Content="SalesBySalesman"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="SalesByProduct"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="PendingDocuments"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content="$" HorizontalContentAlignment="Center"/>
                    <Label Style="{StaticResource generic_Label}" Content="PaymentsRecieved"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content="U"/>
                    <Label Style="{StaticResource generic_Label}" Content="CurrentAccount"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem IsSelected="False">
                <StackPanel Orientation="Horizontal">
                    <Image Height="24" Source="/Cognitivo;component/Images/Menu/modPurchase.png" />
                    <Label Style="{StaticResource H3}" Content="{lex:Loc Purchase}"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="Purchase"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content="C"/>
                    <Label Style="{StaticResource generic_Label}" Content="PurchaseDetail"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="PurchaseByCostCenter"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="PendingDocuments"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content="$"/>
                    <Label Style="{StaticResource generic_Label}" Content="PaymentsMade"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content="U"/>
                    <Label Style="{StaticResource generic_Label}" Content="CurrentAccount"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem IsSelected="False">
                <StackPanel Orientation="Horizontal">
                    <Image Height="24" Source="/Cognitivo;component/Images/Menu/modStock.png" />
                    <Label Style="{StaticResource H3}" Content="{lex:Loc Stock}"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="Item"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="ItemCatalog"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="HistoricStockLevel"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource ico_Label}" Content=""/>
                    <Label Style="{StaticResource generic_Label}" Content="ValuedStockLevels"/>
                </StackPanel>
            </ListBoxItem>
        </ListBox>
        <Grid Grid.Column="1" Background="Gainsboro">
            <StackPanel Background="WhiteSmoke" Grid.Column="0" HorizontalAlignment="Left">
                <StackPanel HorizontalAlignment="Center">
                    <Label Content="{lex:Loc Header}" Style="{StaticResource generic_Label}" HorizontalAlignment="Center" Foreground="{StaticResource Label_ImportantColor}"/>

                    <Label Content="{lex:Loc Customer}" Style="{StaticResource input_label}" />
                    <Controls:SmartBox_Contact x:Name="grid_sbxContact" Get_Customers="True"/>

                    <Label Content="{lex:Loc Geography}" Style="{StaticResource input_label}" />
                    <Controls:SmartBox_Geography x:Name="grid_sbxGeography" />

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="4,0">
                            <Label Style="{StaticResource input_label}">
                                <TextBlock>
                                            <Run Text="{lex:Loc Range}"/>
                                            <Run Text="{lex:Loc StartDate}"/>
                                </TextBlock>
                            </Label>
                            <DatePicker x:Name="grid_dateStart" Width="124"/>
                        </StackPanel>
                        <StackPanel Margin="2,0">
                            <Label Style="{StaticResource input_label}">
                                <TextBlock>
                                            <Run Text="{lex:Loc Range}"/>
                                            <Run Text="{lex:Loc EndDate}"/>
                                </TextBlock>
                            </Label>
                            <DatePicker x:Name="grid_dateEnd" Width="124"/>
                        </StackPanel>
                    </StackPanel>

                    <Label Content="{lex:Loc Condition}" Style="{StaticResource input_label}" />
                    <TextBox x:Name="grid_tbxCondition" Style="{StaticResource input_textbox}"/>

                    <Label Content="{lex:Loc Contract}" Style="{StaticResource input_label}" />
                    <TextBox x:Name="grid_tbxContract" Style="{StaticResource input_textbox}"/>

                    <Rectangle Style="{StaticResource line_Bar}"/>

                    <Label Content="{lex:Loc Details}" Style="{StaticResource generic_Label}" HorizontalAlignment="Center" Foreground="{StaticResource Label_ImportantColor}"/>

                    <Label Content="{lex:Loc Item}" Style="{StaticResource input_label}" />
                    <Controls:SmartBox_Item x:Name="grid_sbxItem"/>

                    <Label Content="{lex:Loc Tags}" Style="{StaticResource input_label}" />
                    <TextBox x:Name="grid_tbxTags" Style="{StaticResource input_textbox}"/>

                    <Button Content="L" FontFamily="/Cognitivo;component/Resources/#cognitivo"
                                    Style="{DynamicResource MetroCircleButtonStyle}" Click="btnGridSearch"
                                    VerticalAlignment="Center" Height="32" Width="32" BorderBrush="RoyalBlue"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
